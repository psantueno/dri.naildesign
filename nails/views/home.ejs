        <section id="productos" class="bodya">
            <secction class="shop-home">
                <div class="shop-texto">
                    <h1>Productos</h1>
                    <p>Las Mejores Marcas Internacionales las encontrás en nuestro Shop Online</p>
                    <a href="/products">
                    <button type="button" class="btn-bgstroke">Shop</button>
                </a>
                </div>


              <!-- PRUEBA PARA MOSTRAR TODO POR AUTO CLASIFICACIÒN -->

              <% categoriasProductos.forEach(categoria=>{ %>

                <%let contador=0;%>
                <div class="shop-texto">
                    <h2><%=categoria%></h2>

                    <div class="container">
                        <% productsJson.forEach(product=>{ if(product.categoria===categoria){ %>
                            
                            <%if (contador<4){%>
                                

                            <div class="item-box">
                                <a class="enlace-detalle" href="/products/detailProduct/<%=product.id%>">
                                    <div class="item-box-image">
                                        <img src="/image/<%= product.imagen %>"  alt="Esmalte Cream Velvet"></img>
                                    </div>
                                </a>
                                <div class="nombre-producto">
                                    <h3> <%= product.nombre %> </h3>
                                </div>

                                <div class="preciopdp"> <span class="product_price">ARS $
                                    <%=product.precio-product.precio*product.descuento /100%>
                                </span>
                                <br>
                                <strike class="product_discount"> <span style='color:black'>ARS $
                                        <%=product.precio%><span>
                                </strike>
                            </div>
                                
                                <a class="to-carrito" href="/cart">
                                    <button type="button" class="btn-bgstroke">Comprar</button>
                                </a>

                               
                            </div>

                            <%}%>
                            <%contador++%>

                        <% }}) %>
                    </div>
                    <hr>
                </div>
                <%})%>

