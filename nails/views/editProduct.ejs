<!DOCTYPE html>
<html>

<!-- START HEAD-->
<%- include("./partials/head.ejs") %>
<!-- END HEAD-->

<body>

    <!-- START HEADER -->
<%- include("./partials/header.ejs") %>
<!-- END HEADER-->

    <form class="forms"  action="/products/editProduct/<%=productoDeUrl.id%>?_method=PUT" method="POST" >
        <div class="container2">
            <h1>Editar Productos</h1>
      

            <div class="campos-form">
                <label for="nombre-producto"><b>Nombre de producto</b></label>
                <input type="text" placeholder="" value="<%=productoDeUrl.nombre%>" name="nombreproducto" id="nombreproducto" required>
            </div>

            <div class="campos-form">
                <label for="descripcion-producto"><b>Descripcion del producto </b></label>
                <textarea type="text" placeholder="" name="descripcionproducto" id="descripcionproducto" required><%=productoDeUrl.descripcion%></textarea>
            </div>

            <div class="campos-form categoria-producto">
                <label for="categoria-producto"><b>Categoría</b></label>
                <textarea type="text" placeholder=""  name="categoriaproducto" id="categoriaproducto" required><%=productoDeUrl.categoria%></textarea>
            </div>
            <div class="campos-form categoria-producto">
                <label for="descuento-producto"><b>Descuento</b></label>
                <textarea type="text" placeholder=""  name="descuentoproducto" id="descuentoproducto" required><%=productoDeUrl.descuento%></textarea>
            </div>

            <div class="categoria">
                <label for="categoria-producto"><b>Categorías del producto (puede elegir más de una) </b></label>
                <div class="interes2">
                    <input name="maquillaje" type="checkbox" />Maquillaje
                    <br />
                    <input name="esmalte" type="checkbox" />Esmalte
                    <br />
                    <input name="crema" type="checkbox" />Crema
                    <br />
                    <input name="unapostiza" type="checkbox" />Uñas Postizas
                    <br />
                    <input name="cuidado" type="checkbox" />Cuidado
                    </br>
                </div>
            </div>

            <div class="campos-form">
                <label for="cantidad-producto"><b>Cantidad (ml)</b></label>
                <input type="number" placeholder="Cantidad de producto" name="Cantidadproducto" id="cantidadproducto" >
            </div>

            <div class="campos-form">
            <label for="precio-producto"><b>Precio del producto</b></label>
            <input type="number" placeholder="" value="<%=productoDeUrl.precio%>" name="precioproducto" id="precioproducto" required>
        </div>

        <div class="campos-form">
        <label for="imagen-producto"><b>Imagen del producto (actual:<%=productoDeUrl.imagen%>)</b></label>
        <input type="file" placeholder="Imagen de producto" name="imagenproducto" id="imagenproducto"  value="">
        </div>

        <div class="botones">
            
          
            <button type="submit" class="btn-bgstroke" href="#">Modificar</button>
           
        
        </div>

        <div class="botones">
            <button type="button" class="btn-bgstroke" href="#">Borrar</button>
        </div>

        </div>
    </form>

</body>

<!-- START FOOTER -->
<%- include("./partials/footer.ejs") %>    
<!-- END FOOTER-->


</html>