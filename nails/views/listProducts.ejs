<!DOCTYPE html>
<html lang="en">

<!-- START HEAD-->
<%- include("./partials/head.ejs") %>
    <!-- FINISH HEAD-->

    <body class="body">

        <!-- START HEADER-->
        <%- include("./partials/header.ejs") %>
            <!-- END HEADER-->

            <!-- START PRODUCTOS-->
            <section id="productos" class="bodya">
                <secction class="shop-home">
                    <div class="shop-texto">
                        <h1>Productos</h1>
                        <p>Las Mejores Marcas Internacionales las encontrás en nuestro Shop Online</p>
                    </div>
                    <hr>
                        <!-- PRUEBA PARA MOSTRAR TODO POR AUTO CLASIFICACIÒN -->

                        <%categoriasProductos.forEach(categoria=>{%>
                        <div class="shop-texto">
                            <h2><%=categoria%></h2>
    
                            <div class="container">
                                <% productsJson.forEach(product=>{ if(product.categoria===categoria){ %>
                                    <div class="item-box">
                                        <a class="enlace-detalle" href="/products/detailProduct/<%=product.id%>">
                                            <div class="item-box-image">
                                                <img src= <%= product.imagen %>  alt="Esmalte Cream Velvet"></img>
                                            </div>
                                        </a>
                                        <div class="nombre-producto">
                                            <h3> <%= product.nombre %> </h3>
                                        </div>
                                        <p> <%= product.precio %> </p>
                                        <a class="to-carrito" href="/cart">
                                            <button type="button" class="btn-bgstroke">Comprar</button>
                                        </a>
                                    </div>
        
                                <%  }}) %>
                            </div>
                            <hr>
                        </div>

                    <%})%>

<!-- PRUEBA PARA MOSTRAR TODO POR AUTO CLASIFICACIÒN -->





            </section>
            </secction>
            <!-- END PRODUCTOS HOME-->



            <!-- START FOOTER-->
            <%- include("./partials/footer.ejs") %>
                <!-- END FOOTER-->

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                    crossorigin="anonymous"></script>
                <!-- script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script -->
    </body>

</html>